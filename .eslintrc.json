{
	"env": {
		"browser": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": [
			"warn",
			{
				"varsIgnorePattern" : "initialisePopup|initialiseOptions|developerInfo|_i",
				"args" : "none",
				"vars" : "local"
			}
		],
		"constructor-super": "warn",
		"no-extra-semi":"warn",
		"semi":"warn",
		"no-irregular-whitespace": "warn",
		"dot-notation":"warn",
		"dot-location":["warn","property"],
		"valid-typeof": "warn"
	},
	"globals": {
		"chrome" : true,
		"countdown" : true,
		"initialisePopup": true,
		"initialiseOptions" : true,
		"_i" : true,
		"LocalLang" : true
	}

}
