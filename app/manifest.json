{
	"manifest_version": 2,

	"name": "Beeminder App",
	"description": "A companion app for Beeminder",
	"version": "0.01",
	"author": "Jason Allan",

	"options_page": "options.html",

	"omnibox": { "keyword" : "bm" },
	"icons": {"19": "infinibee19x19.png"},

	"permissions": [
		"storage",
		"https://www.beeminder.com/api/v1/users/",
		"https://bmndr.s3.amazonaws.com/uploads/"
	],
	"browser_action": {
		"default_icon": "infinibee19x19.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["background.js"]
	}
}
